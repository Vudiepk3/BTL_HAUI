<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:padding="6dp"
            android:background="#00BCD4"
            android:textColor="@color/white"
            android:text="Luong"
            android:layout_width="match_parent"
            android:id="@+id/txtTitel"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,SpUsage" />
        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                android:inputType="numberDecimal"
                android:hint="Mã lương"
                android:padding="6dp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <EditText
                android:padding="6dp"
                android:id="@+id/edWare"
                android:hint="Lương cứng"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="number"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <EditText
                android:id="@+id/edBonus"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                android:hint="Thưởng"
                android:inputType="number"
                android:padding="6dp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <EditText
                android:id="@+id/edDeduct"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_edittext"
                android:hint="Khấu trừ"
                android:inputType="number"
                android:padding="6dp"
                tools:ignore="Autofill,HardcodedText,TextFields" />
            <LinearLayout
                android:layout_marginVertical="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:weightSum="10">
                <EditText
                    android:padding="6dp"
                    android:id="@+id/edDatein"
                    android:hint="Ngày tăng lương"
                    android:background="@drawable/custom_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    tools:ignore="Autofill,HardcodedText,TextFields"
                    android:layout_weight="8"/>
                <ImageView
                    android:id="@+id/imgdate"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_date_range_24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnAdd_KH"
                android:text="Thêm"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:backgroundTint="#00BCD4"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
            <Button
                android:id="@+id/btnCancel"
                android:text="Hủy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:backgroundTint="#00BCD4"
                android:layout_height="wrap_content"
                tools:ignore="ButtonStyle,HardcodedText" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>